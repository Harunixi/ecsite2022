---
title: CardRARE
layout: layout.njk
css: css/style.css
js: js/script.js
path: index.html
---
<h2 class="title">商品一覧</h2>
<div class="product">
	<!-- 各sectionをループで作成 -->
	{% for topPhoto in products %}
		<section id="product" class="product__card {{ topPhoto.url }}">
			<a href="products/{{ topPhoto.url }}/">
				<div class="card">
					<div class="card__image"><img src="images/{{ topPhoto.itemphotos[0] }}" alt="{{ topPhoto.name }}メイン画像"/></div>
					<img class="card__soldout card__soldout-{{ topPhoto.state }}" src="images/soldout.png" alt="">
					<p class="card__price">{{ topPhoto.price }}</p>
				</div>
				<p class="product__text">{{ topPhoto.name }}</p>
			</a>
		</section>
	{% endfor %}
</div>
<button class="button">More</button>